<%= form_for @hat do |f| %>
  <p>
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </p>
  <p>
    <%= f.label :fit %>
    <%= f.text_field :fit %>
  </p>
  <p>
    <%= f.submit 'Add hat' %>
  </p>
<% end %>

<%= @hats.each do |hat| %>
<ul>
  <li>
    <%= hat.brand %>, <%= hat.fit %>
  </li>
</ul>
<% end %>